<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginLeft="2dp"
        android:text="体感舒适："
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/weather_suggestion_comf_img"
            android:layout_alignParentLeft="true"
            android:src="@drawable/w100"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:hint="中"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:id="@+id/weather_suggestion_comf_brf_text"
            android:layout_toRightOf="@+id/weather_suggestion_comf_img"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/weather_suggestion_comf_txt_text"
            android:layout_below="@+id/weather_suggestion_comf_brf_text"
            android:layout_toRightOf="@+id/weather_suggestion_comf_img"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:hint="气象条件对空气污染物稀释、扩散和清除无明显影响，易感人群应适当减少室外活动时间。"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40dp"
        android:background="#6699cc"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:layout_marginLeft="2dp"
        android:text="穿衣指数："
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/weather_suggestion_drsg_img"
            android:layout_alignParentLeft="true"
            android:src="@drawable/w100"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:hint="中"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:id="@+id/weather_suggestion_drsg_brf_text"
            android:layout_toRightOf="@+id/weather_suggestion_drsg_img"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/weather_suggestion_drsg_txt_text"
            android:layout_below="@+id/weather_suggestion_drsg_brf_text"
            android:layout_toRightOf="@+id/weather_suggestion_drsg_img"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:hint="气象条件对空气污染物稀释、扩散和清除无明显影响，易感人群应适当减少室外活动时间。"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40dp"
        android:background="#6699cc"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:layout_marginLeft="2dp"
        android:text="温馨提示："
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/weather_suggestion_flu_img"
            android:layout_alignParentLeft="true"
            android:src="@drawable/w100"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:hint="中"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:id="@+id/weather_suggestion_flu_brf_text"
            android:layout_toRightOf="@+id/weather_suggestion_flu_img"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/weather_suggestion_flu_txt_text"
            android:layout_below="@+id/weather_suggestion_flu_brf_text"
            android:layout_toRightOf="@+id/weather_suggestion_flu_img"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:hint="气象条件对空气污染物稀释、扩散和清除无明显影响，易感人群应适当减少室外活动时间。"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40dp"
        android:background="#6699cc"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:layout_marginLeft="2dp"
        android:text="运动建议："
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />



    <RelativeLayout
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/weather_suggestion_sport_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/w100" />

        <TextView
            android:id="@+id/weather_suggestion_sport_brf_text"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/weather_suggestion_sport_img"
            android:gravity="center_vertical"
            android:hint="中"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/weather_suggestion_sport_txt_text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/weather_suggestion_sport_brf_text"
            android:layout_toRightOf="@+id/weather_suggestion_sport_img"
            android:gravity="center_vertical"
            android:hint="气象条件对空气污染物稀释、扩散和清除无明显影响，易感人群应适当减少室外活动时间。"
            android:textSize="10dp" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40dp"
        android:background="#6699cc"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>